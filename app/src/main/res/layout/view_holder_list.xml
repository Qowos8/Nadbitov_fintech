<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginHorizontal="32dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/round_shape"
    android:elevation="16dp"
    >

    <ImageView
        android:id="@+id/banner"
        android:layout_width="40dp"
        android:layout_height="63dp"
        android:contentDescription="null"
        android:src="@drawable/banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/image_shape"/>
    <TextView
        android:id="@+id/film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аватар 2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/banner"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/film_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фантастика "
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/banner"
        app:layout_constraintTop_toBottomOf="@id/film_name"
        />
    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2016"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/film_genre"
        app:layout_constraintTop_toBottomOf="@id/film_name"
        android:layout_marginVertical="16dp"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>